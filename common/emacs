 '(custom-safe-themes
   (quote
    ("af214da6d2c72574ededfb50e7985f80ada42b327ed3bffc9b67740fb5e74e58" default)))
 '(linum-format (quote "%4d ")))

;; Neotree
(require 'neotree)
;; }}}

;; Helm {{{
(require 'helm)
