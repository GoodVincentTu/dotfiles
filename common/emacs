(evil-leader/set-key
  "w" 'save-buffer
  "d" 'kill-buffer
  "gs" 'magit-status
  "t" 'helm-projectile
  "m" 'neotree-toggle
  ;; "ev" [open .emacs]
  ;; "rs" [run tests]
  ;; "a" [run ack/g]
)

(require 'evil)
(evil-mode t)
;; }}}

;; Overall settings {{{
(setq make-backup-files nil)
;; }}}

